<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.exp.ucmp.carDealer.dao.RightActivitiesDao">

    <resultMap id="sysRightActivitiesResultMap" type="com.exp.ucmp.entity.SysRightActivitiesEntity" >
        <result column="right_id" property="rightId" jdbcType="BIGINT" />
        <result column="right_pack_id" property="rightPackId" jdbcType="BIGINT" />
        <result column="campaign_name" property="campaignName" jdbcType="VARCHAR" />
        <result column="campaign_type" property="campaignType" jdbcType="VARCHAR" />
        <result column="campaign_describe" property="campaignDescribe" jdbcType="VARCHAR" />
        <result column="campaign_code" property="campaignCode" jdbcType="VARCHAR" />
        <result column="model_code" property="modelCode" jdbcType="VARCHAR" />
        <result column="model_name" property="modelName" jdbcType="VARCHAR" />
        <result column="shape_code" property="shapeCode" jdbcType="VARCHAR" />
        <result column="shape_name" property="shapeName" jdbcType="VARCHAR" />
        <result column="conditions" property="conditions" jdbcType="VARCHAR" />
        <result column="start_date" property="startDate" jdbcType="TIMESTAMP" />
        <result column="end_date" property="endDate" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="t_sys_right_activities_Column_List" >
        a.right_id,
        a.right_pack_id,
        a.campaign_name,
        a.campaign_type,
        a.campaign_describe,
        a.campaign_code,
        a.model_code,
        a.model_name,
        a.shape_code,
        a.shape_name,
        a.conditions,
        a.start_date,
        a.end_date
    </sql>

    <select id="selectActivitiesList" resultType="com.exp.ucmp.stock.dto.RightActivitiesSelectListDto">
        SELECT
        a.right_id AS rightId,
        a.right_pack_id AS rightPackId,
        a.campaign_name AS campaignName,
        a.campaign_code AS campaignCode
        FROM
        t_sys_right_activities a
        where
            a.is_delete = '00'
        and a.campaign_type = '3103'
        ORDER BY
        a.created_date DESC
    </select>


</mapper>