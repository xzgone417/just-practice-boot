<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.exp.ucmp.dictionary.dao.SysDictionaryDao">


    <select id="selectDictionary" parameterType="com.exp.ucmp.dictionary.SysDictionaryQueryDto"
            resultType="com.exp.ucmp.dictionary.SysDictionaryDto">
        SELECT
        tc.dict_type AS dictType,
        td.dict_code AS dictCode,
        td.dict_value AS dictValue
        FROM
        t_sys_datadict_type_code tc,
        t_sys_datadict td
        where
        <if test="dictTag.size>0">
            tc.dict_tag in
            <foreach collection="dictTag" index="index" item="item" open="("
                     separator="," close=")">
                #{dictTag[${index}]}
            </foreach>
        </if>
        and tc.dict_tag = td.dict_tag
        and td.dict_status = '01'
        order by td.dict_code
    </select>
</mapper>