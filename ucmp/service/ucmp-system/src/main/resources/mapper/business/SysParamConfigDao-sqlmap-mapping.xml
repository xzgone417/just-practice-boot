<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.exp.ucmp.parameter.dao.SysParamConfigDao">

    <resultMap id="sysParamConfigResultMap" type="com.exp.ucmp.config.dto.SysParamConfigDto">
        <result column="param_id" property="paramId" jdbcType="INTEGER"/>
        <result column="param_type" property="paramType" jdbcType="VARCHAR"/>
        <result column="param_profile" property="paramProfile" jdbcType="VARCHAR"/>
        <result column="param_details" property="paramDetails" jdbcType="VARCHAR"/>
        <result column="param_values" property="paramValues" jdbcType="VARCHAR"/>
        <result column="param_unit" property="paramUnit" jdbcType="VARCHAR"/>
        <result column="param_unit_details" property="paramUnitDetails" jdbcType="VARCHAR"/>
        <result column="param_sort" property="paramSort" jdbcType="INTEGER"/>

    </resultMap>

    <select id="findByType" resultType="com.exp.ucmp.config.dto.SysParamConfigDto">
      SELECT
        param_id AS paramId,
        param_type AS paramType,
        param_profile AS paramProfile,
        param_details AS paramDetails,
        param_values AS paramValues,
        param_unit AS paramUnit,
        param_unit_details AS paramUnitDetails
       FROM
       t_sys_param_config
      <where>
          is_enable = '01'
          AND
          is_delete = '00'
          AND param_type=#{paramType}
      </where>

    </select>

    <select id="selectList" resultMap="sysParamConfigResultMap">
        SELECT
        *
        FROM
        t_sys_param_config
        <where>
            is_enable = '01'
            AND
            is_delete = '00'
        ORDER BY
            param_sort ASC
        </where>
    </select>

</mapper>